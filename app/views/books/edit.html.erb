<h1>Books#edit</h1>
<p>Find me in app/views/books/edit.html.erb</p>

<% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Introduction</h4>
    <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
<% end %>